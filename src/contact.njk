<div class="container">
    <div class="row mb-3 mb-md-4 praise-font text-center justify-content-center fade-in">
        <div class="col-12">
            <h1 class="display-1 fw-bold" style="color: #341830; font-size: clamp(2.5rem, 10vw, 125px);">
                Envoyer un message
            </h1>
        </div>
    </div>
    <form id="myForm" onsubmit="submitForm(event)" method="post"
        action="https://forms.un-static.com/forms/980fdef8bd25a4bf9a0c14e4492358d4517bd25c"
        class="px-2 px-sm-3 px-md-4 px-lg-5">

        <div class="px-1 px-sm-2 px-md-3 px-lg-5">
            <!-- Nom -->
            <div class="mb-4">
                <label for="name" class="form-label fs-4 text-dark mb-3">Nom</label>
                <div class="row">
                    <div class="col-12 col-sm-8 col-md-6 col-lg-4">
                        <input type="text" class="form-control shadow" id="name" name="name"
                            placeholder="Nom complet" required>
                    </div>
                </div>
            </div>

            <!-- Adresse courriel -->
            <div class="mb-4">
                <label for="email" class="form-label fs-4 text-dark mb-3">Adresse courriel</label>
                <div class="row">
                    <div class="col-12 col-sm-8 col-md-6 col-lg-4">
                        <div class="input-group shadow">
                            <span class="input-group-text bg-light"><i class="fa fa-envelope"></i></span>
                            <input type="email" class="form-control" id="email" name="email"
                                placeholder="Adresse courriel" required>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sujet -->
            <div class="mb-4">
                <label for="subject" class="form-label fs-4 text-dark mb-3">Sujet</label>
                <div class="row">
                    <div class="col-12 col-sm-10 col-md-8 col-lg-6">
                        <input type="text" class="form-control shadow" id="subject" name="subject"
                            placeholder="Peinture personnalisée, œuvre originale, etc." required>
                    </div>
                </div>
            </div>

            <!-- Message -->
            <div class="mb-4">
                <label for="message" class="form-label fs-4 text-dark mb-3">Message</label>
                <div class="row">
                    <div class="col-12 col-lg-10 col-xl-8">
                        <textarea name="message" id="message" class="form-control shadow p-3" rows="6"
                            placeholder="..." required></textarea>
                    </div>
                </div>
            </div>

            <!-- Bouton d'envoi -->
            <div class="mt-4 mt-md-5">
                <div class="d-flex justify-content-center justify-content-md-start">
                    <button type="submit" class="btn btn-primary shadow fst-italic px-4 py-2">
                        Envoyer
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>


   